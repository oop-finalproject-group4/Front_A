        <Label text="電動車租借平台" style="-fx-font-size: 40px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
        <Label text="電子信箱:" GridPane.rowIndex="1"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
