        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <HBox alignment="CENTER" spacing="20" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <children>
                <Button text="註冊" onAction="#openRegistrationForm"/>
                <Button text="登入"/>
            </children>
            <alignment>
                <Pos alignment="CENTER"/>
            </alignment>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <alignment>
        <Pos alignment="CENTER"/>
    </alignment>
</GridPane>
